@page
@model ExamProject.Pages.PagesAdmin.AddProductModel
@{
    
}
<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name">Наименование товара</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp.asp-validation-for="Product.Name" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Price">Стоимость товара</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp.asp-validation-for="Product.Price" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Quantity">Количество товара</label>
        <input asp-for="Product.Quantity" class="form-control" />
        <span asp.asp-validation-for="Product.Quantity" />
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId">Категория</label>
        <select asp-for="Product.CategoryId"
                asp-items="Model.ListCategories"
                class="form-control">
            <option value="">-- Выберите категорию --</option>
        </select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.DescriptionId">Описание</label>
        <select asp-for="Product.DescriptionId"
                asp-items="Model.ListDescription"
                class="form-control">
            <option value="">-- Выберите описание --</option>
        </select>
        <span asp-validation-for="Product.DescriptionId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
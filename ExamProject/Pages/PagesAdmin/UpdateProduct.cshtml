@page "{id:int}"
@model ExamProject.Pages.PagesAdmin.UpdateProductModel
@{
}

<h2>Редактировать товар</h2>

<div asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name">Наименование товара</label>
        <input asp-for="Product.Name" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Product.ImagePath">Ссылка на картинку</label>
        <input asp-for="Product.ImagePath" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Product.Price">Стоимость товара</label>
        <input asp-for="Product.Price" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Product.Quantity">Количество товара</label>
        <input asp-for="Product.Quantity" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId">Категория</label>
        <select asp-for="Product.CategoryId"
                asp-items="Model.ListCategories"
                class="form-control">
            <option value="">-- Выберите категорию --</option>
        </select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>

    <div>
        <a class="btn btn-primary" asp-page="AddCategory">Добавить категорию</a>
    </div>

    <div class="form-group">
        <label asp-for="Product.DescriptionId">Поставщик</label>
        <select asp-for="Product.DescriptionId"
                asp-items="Model.ListDescription"
                class="form-control">
            <option value="">-- Выберите поставщика --</option>
        </select>
        <span asp-validation-for="Product.DescriptionId"></span>
    </div>

    <div>
        <a class="btn btn-primary" asp-page="AddDescription">Добавить поставщика</a>
    </div>

    <button type="submit" class="btn btn-primary">Изменить</button>
    <div>
        <a class="btn btn-primary" asp-page="/Index">Назад</a>
    </div>
</form>

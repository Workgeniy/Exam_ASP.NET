@page
@model ExamProject.Pages.PagesBuyer.PageCartModel
<h2>Моя корзина</h2>

@if (Model.Cart == null || Model.Cart.Items.Count == 0) {
    <h4>Корзина пуста</h4>
}
else {
    <table class="table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Количество</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Cart.Items) {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td>
                        <div>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Общая стоимость: @Model.Summa</h2>

      <div>
          <a class="btn btn-primary" asp-page="Order" asp-route-summa="@Model.Summa">Оформить заказ</a>
        </div>
}

<div>
    <a class="btn btn-primary" asp-page="/Index">Назад</a>
</div>
